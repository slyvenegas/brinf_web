---
import BaseLayoutB from "@/layouts/BaseLayoutB.astro";
---

<BaseLayoutB>
    <div class="image-container">
        <img src="https://giottomillan.wordpress.com/wp-content/uploads/2016/10/circulo-con-punto-en-el-centro.gif" alt="">
    </div>

    <style>
        .image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Ocupa toda la altura de la pantalla */
        }

        .image-container img {
            max-width: 100%; /* Para que no sobrepase el ancho de la pantalla */
            height: auto;
        }
    </style>
</BaseLayoutB>
