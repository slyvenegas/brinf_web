---
import imagesData from "../../data/images.json";
---

<div class="grid gap-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 p-4">
  {
    imagesData.map((item, index) => (
      <a href={item.link}>
      <div
        class="relative group overflow-hidden rounded-2xl shadow-xl transition-all duration-700 hover:scale-105"
        style={`animation: fadeInUp 0.6s ease ${(index + 1) * 0.1}s both;`}
      >
          <img
            src={item.src}
            alt="Artwork"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
        <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center p-4">
          <p class="text-white text-center text-sm sm:text-base font-medium">
            {item.description}
          </p>
        </div>
      </div>
        </a>
    ))
  }
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
